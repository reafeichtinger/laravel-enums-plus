{
  "$schema": "https://laravel-ide.com/schema/laravel-ide-v2.json",
  "codeGenerations": [
    {
      "id": "rea.create-enum-plus",
      "name": "Create Enum Plus",
      "classSuffix": "Enum",
      "parameters": [
        {
          "id": "rea.create-enum:type",
          "name": "Type",
          "type": "combobox",
          "options": {
            "string": "string",
            "int": "int"
          },
          "variable": "TYPE"
        }
      ],
      "files": [
        {
          "appNamespace": "Enums",
          "name": "${INPUT_CLASS|className|upperCamelCase}.php",
          "template": {
            "type": "stub",
            "path": "/stubs/laravel-enums-plus.stub",
            "fallbackPath": "stubs/laravel-enums-plus.stub",
            "parameters": {
              "{{ class }}": "${INPUT_CLASS|className|upperCamelCase}",
              "{{ namespace }}": "${INPUT_FQN|namespace}",
              "{{ value }}": "${TYPE|replace:string,'standard'|replace:int,0}",
              "{{ type }}": "${TYPE}"
            }
          }
        }
      ]
    }
  ]
}